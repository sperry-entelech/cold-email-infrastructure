# Cold Email System Configuration
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to git!

# ==========================================
# AI PROVIDER CONFIGURATION (Choose One)
# ==========================================
# Primary AI provider for icebreaker generation
AI_PROVIDER=claude  # claude, azure_openai, or none (uses fallbacks)

# Claude API (Recommended)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022  # or claude-3-haiku-20240307 for faster/cheaper

# n8n Workflow Integration (Optional - Alternative to direct Claude API)
N8N_ICEBREAKER_WEBHOOK_URL=https://your-n8n-instance.com/webhook/claude-icebreaker

# Azure OpenAI (Optional Alternative)
AZURE_OPENAI_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_MODEL=gpt-4

# ==========================================
# INSTANTLY CONFIGURATION (Required)
# ==========================================
# Get API key from instantly.ai dashboard -> Settings -> API
INSTANTLY_API_KEY=your_instantly_api_key_here
INSTANTLY_WORKSPACE_ID=your_workspace_id_here

# Campaign IDs (create these in Instantly first)
INSTANTLY_CAMPAIGN_ENTERPRISE=your_enterprise_campaign_id
INSTANTLY_CAMPAIGN_PROFESSIONAL=your_professional_campaign_id
INSTANTLY_CAMPAIGN_EDUCATIONAL=your_educational_campaign_id

# ==========================================
# MAILBOX CONFIGURATION (Required for sending)
# ==========================================
# ZapMail or similar provider configuration
MAILBOX_PROVIDER=zapmail  # zapmail, gmass, etc.
MAILBOX_COUNT=3  # Number of mailboxes to use
DAILY_EMAIL_LIMIT=90  # Total emails per day (30 per mailbox recommended)

# Sending domains (separate from main business domain)
SENDING_DOMAINS=your-consulting.com,your-automation.com,your-solutions.com

# ==========================================
# DATA SOURCES CONFIGURATION
# ==========================================
# Google Sheets integration (optional)
GOOGLE_SHEETS_SERVICE_ACCOUNT_FILE=path/to/service-account.json
GOOGLE_SHEETS_ID=your_google_sheet_id_here
GOOGLE_SHEETS_RANGE=Sheet1!A:Z  # Range to read data from

# Default lead data source
DEFAULT_DATA_SOURCE=google_sheets  # csv, google_sheets, apollo_csv

# ==========================================
# ICEBREAKER CONFIGURATION
# ==========================================
# AI personalization settings
ICEBREAKER_ENABLED=true
ICEBREAKER_TEMPLATE=Love your approach to {specific_observation}, been following {company} for a while, big fan of your {service_focus}.
ICEBREAKER_FALLBACK=Impressed by what you're building at {company_name}, particularly your approach in the {industry} space.

# ==========================================
# MONITORING & NOTIFICATIONS (Optional)
# ==========================================
# Slack notifications for hot leads
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance tracking
TRACKING_ENABLED=true
REPLY_SENTIMENT_ANALYSIS=true

# ==========================================
# APOLLO DATA CONFIGURATION (Optional)
# ==========================================
# If using Apollo-exported data
APOLLO_CSV_MAPPING_FIRST_NAME=first_name
APOLLO_CSV_MAPPING_LAST_NAME=last_name
APOLLO_CSV_MAPPING_EMAIL=email
APOLLO_CSV_MAPPING_COMPANY=company
APOLLO_CSV_MAPPING_TITLE=title
APOLLO_CSV_MAPPING_INDUSTRY=industry
APOLLO_CSV_MAPPING_WEBSITE=website_url

# ==========================================
# SYSTEM SETTINGS
# ==========================================
# Rate limiting
API_REQUEST_DELAY=0.5  # Seconds between API calls
BATCH_SIZE=50  # Leads to process in each batch
MAX_RETRIES=3  # Max retries for failed API calls

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true

# ==========================================
# DEVELOPMENT/TESTING
# ==========================================
# Set to true to enable test mode (won't send actual emails)
TEST_MODE=false
TEST_EMAIL_ADDRESS=your.email@company.com  # For testing campaigns